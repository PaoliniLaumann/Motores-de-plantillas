<h1>Listado de productos</h1>
<div class="products-container">
    {{#if productsExist}}
    {{#each products}}
        <div class="products-container products-card ">
            <img src="{{this.thumbnail}}" class="product-img"/>
            <p>ID: {{this.id}}</p>
            <p>Producto: {{this.name}}</p>
            <p>Precio: $ {{this.price}}</p>
        </div>
    {{/each}}
{{/if}}

</div>
