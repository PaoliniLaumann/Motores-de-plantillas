<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body class="container bg-secondary d-flex flex-column align-items-center mt-5">
    <h1>Agregar un producto</h1>
    <form id="formDescription" action="api/products" method="post"
        class="container d-flex flex-column form-control w-25">
        <input name="name" placeholder="Nombre del producto" class="mt-1" required>
        <input name="price" placeholder="Precio" class="mt-1" required>
        <input name="thumbnail" placeholder="Link de la imagen" class="mt-1" required>
        <button type="submit" class="btn btn-primary w-25 mt-1">Enviar</button>
    </form>
    <a href="/products" class="text-light text-decoration-none btn btn-primary mt-1" style="width: 150px;">Ir a
        productos</a>

    <%- include('../partials/Scripts.ejs') %>

</body>

</html>